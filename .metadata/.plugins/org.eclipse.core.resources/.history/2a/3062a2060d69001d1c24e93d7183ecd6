package StepDefinitions;

import org.junit.runner.RunWith;
import io.cucumber.junit.Cucumber;
import io.cucumber.junit.CucumberOptions;
//to jest potrzebne żebyś nie musial za każdym razem pykać każdego future prawym run as
@RunWith(Cucumber.class)
@CucumberOptions(features="src/test/resources/FeaturesWithTags",
glue={"StepDefinitions"}, 
plugin= {"pretty","junit:target/JUnitReports/report.xml"},tags="@MustRun")
public class TestRunnerforHooks {
// mozna uzywac or i and/ nadpisany tag nad Feature jest dziedziczony przez Scenario // https://www.youtube.com/watch?v=qdwjendx-mc&ab_channel=AutomationStepbyStep
} 
