package PagesFactory;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

import dev.failsafe.internal.util.Assert;

public class HomePage_PF {

WebDriver driverLogin;
	
	public HomePage_PF(WebDriver driverinstance) {
		this.driverLogin=driverinstance;
		PageFactory.initElements(driverLogin,this); //this class. To jest potrzebne żeby nadać driver zmiennym w @FindBy, bo jak widzisz na dole nie odwołujesz się driver.findby.
	}
	
	
	@FindBy(id="logout")
	WebElement buttonlogut;
	
public void CheckLogoutisDisplayed() {
		
		boolean logincheck=buttonlogut.isDisplayed();
		Assert.isTrue(logincheck, "niepoprawne zalogowanie");
	}
}
