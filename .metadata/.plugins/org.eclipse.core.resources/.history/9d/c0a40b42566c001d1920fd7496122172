	static By PurchaseYear = By.id("VehicleDetails.VehiclePurchaseDate.Year");
	static By OwnedBySpouseYes = By.id("LegalDeclarations.HasDeclaredIsCarOwnedByYouOrSpouse1");
	static By OwnedBySpouseNo = By.id("LegalDeclarations.HasDeclaredIsCarOwnedByYouOrSpouse2");
	static By MainOwnerYes = By.id("LegalDeclarations.IsProposerMainDriver1");
	static By MainOwnerNo = By.id("LegalDeclarations.IsProposerMainDriver2");
    static By DriverLicenceFirstUseDay = By.id("FinalDetails.LicenceIssueDate.Day");
    static By DriverLicenceFirstUseMonth = By.id("FinalDetails.LicenceIssueDate.Month");
    static By DriverLicenceFirstUseYear = By.id("FinalDetails.LicenceIssueDate.Year");
	
	
	
	
