    static By PopupButton  = By.xpath(("//label[@for='FinalDetails.CurrentInsuranceExpiryDate']//button[@type='button']"));
    static By ValueEstimatedYes = By.id("VehicleDetails.VehicleValuationIsDefault1");
	static By ValueEstimatedNo = By.id("VehicleDetails.VehicleValuationIsDefault2");
	static By SelectValue = By.id("VehicleDetails.VehicleValueId");
